<% layout('layout/boilerplate.ejs') -%>
<body>
  <h3 class="hadd">Add a Listing</h3>
  <form
    enctype="multipart/form-data"
    action="/listings"
    method="post"
    class="addform needs-validation"
    novalidate
  >
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        required
        type="text"
        name="title"
        id="title"
        class="form-control"
        placeholder="Add a catchy title"
      />
      <div class="invalid-feedback">
        Please enter a catchy title. You cannot leave it empty
      </div>
    </div>
    <br />
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input
        required
        class="form-control"
        type="number"
        name="price"
        id="price"
        placeholder="1000-2000"
      />
    </div>
    <br />
    <div class="mb-3">
      <label class="form-label" for="description">Description</label>
      <textarea
        required
        class="form-control"
        name="description"
        id="description"
        placeholder="Add a Description"
      ></textarea>
    </div>
    <br />
    <div class="mb-3">
      <label class="form-label" for="image">Upload Listing Image</label>
      <input class="form-control" type="file" name="image" id="image" required/>
    </div>
    <br />
    <div class="mb-3">
      <label class="form-label" for="country">Country</label>
      <input
        required
        class="form-control"
        type="text"
        name="country"
        id="country"
        placeholder="e.g Pakistan"
      />
    </div>
    <br />
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input
        required
        type="text"
        class="form-control"
        name="location"
        id="location"
        placeholder="e.g Rawalpindi"
      />
    </div>
    <br />
    <button class="btn btn-dark viewbtn" type="submit">Submit</button>
  </form>
</body>
